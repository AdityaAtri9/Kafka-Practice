{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"deviceId": {
			"type": "string",
			"minLength": 1
		},
		"status": {
			"type": "string",
			"enum": [
				"online",
				"offline"
			]
		},
		"timestamp": {
			"type": "string",
			"format": "date-time"
		}
	},
	"required": [
		"deviceId",
		"status",
		"timestamp"
	],
	"additionalProperties": false
}